# Environment Configuration for RCA Agent
# Copy this file to .env and fill in your actual values

# ===================================
# Database Configuration
# ===================================
# PostgreSQL Database Connection
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Connection
REDIS_URL=redis://localhost:6379

# ===================================
# LLM Provider Configuration
# ===================================
# Choose your LLM provider: bedrock, azure, groq, ollama, litellm
LLM_PROVIDER=litellm

# AWS Bedrock Configuration
AWS_REGION=ap-south-1
BEDROCK_MODEL=apac.anthropic.claude-3-7-sonnet-20250219-v1:0
BEDROCK_TEMPERATURE=0.2
AWS_BEARER_TOKEN_BEDROCK=your-aws-bearer-token

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_VERSION=2024-02-15-preview
AZURE_OPENAI_MODEL=gpt-4o
AZURE_OPENAI_TEMPERATURE=0.2

# Groq Configuration
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.1-70b-versatile
GROQ_TEMPERATURE=0.2

# Ollama Configuration
OLLAMA_GPT_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_TEMPERATURE=0
# OLLAMA_TOKEN=your-ollama-token  # Optional

# LiteLLM Configuration
LITELLM_MODEL=bedrock-claude-3-7-sonnet
LITELLM_TEMPERATURE=0.2
LITELLM_PROXY_URL=http://192.168.101.144:32090/v1
LITELLM_API_KEY=your-litellm-api-key

# ===================================
# MemGraph Configuration (RCA Specific)
# ===================================
MEMGRAPH_URL=http://192.168.101.147:31998
SIMILARITY_THRESHOLD=0.9

# ===================================
# Agent Service URLs
# ===================================
REMEDIATION_AGENT_URL=http://localhost:8012
RCA_AGENT_URL=http://localhost:8041
MCP_SSE_URL=your-mcp-sse-url

# ===================================
# JIRA Integration (MCP)
# ===================================
JIRA_MCP_SERVER=your-jira-mcp-server-url
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token

# ===================================
# PostgreSQL MCP Server
# ===================================
POSTGRES_MCP_SERVER=your-postgres-mcp-server-url

# ===================================
# Langfuse Configuration
# ===================================
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# ===================================
# Notes
# ===================================
# - Copy this file to .env and update with your actual values
# - Never commit .env file to version control
# - For LLM_PROVIDER, choose one of: bedrock, azure, groq, ollama, litellm
# - Configure only the sections relevant to your chosen LLM provider
# - MemGraph configuration is required for similarity matching
# - MCP servers enable JIRA and database integrations